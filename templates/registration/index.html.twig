{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .form-container {
        margin: 2em auto;
        max-width: 500px;
        padding: 2em;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-container h1 {
        text-align: center;
        margin-bottom: 1em;
    }
    .form-group {
        margin-bottom: 1em;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5em;
        font-weight: bold;
    }
    .form-group input, .form-group select {
        width: 100%;
        padding: 0.7em;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }
    .form-group button {
        width: 100%;
        padding: 0.7em;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .form-group button:hover {
        background-color: #0056b3;
    }
    .form-group .form-error {
        color: red;
        font-size: 0.9em;
        margin-top: 0.2em;
    }
    .flash-messages {
        margin-bottom: 1em;
    }
    .flash-messages .alert {
        padding: 1em;
        border-radius: 5px;
        margin-bottom: 1em;
    }
    .flash-messages .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    .flash-messages .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="form-container">
    <h1>Register User</h1>

    <div class="flash-messages">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            {% if form_errors(form.username) %}
                <div class="form-error">{{ form_errors(form.username) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {% if form_errors(form.email) %}
                <div class="form-error">{{ form_errors(form.email) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
            {% if form_errors(form.password) %}
                <div class="form-error">{{ form_errors(form.password) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.bio) }}
            {{ form_widget(form.bio) }}
            {% if form_errors(form.bio) %}
                <div class="form-error">{{ form_errors(form.bio) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.gender) }}
            {{ form_widget(form.gender) }}
            {% if form_errors(form.gender) %}
                <div class="form-error">{{ form_errors(form.gender) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
           {{ form_widget(form.Register, {'attr': {'class': 'd-none'}}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
