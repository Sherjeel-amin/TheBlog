{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Register User</h1>

    <div class="flash-messages">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            {% if form_errors(form.username) %}
                <div class="form-error">{{ form_errors(form.username) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {% if form_errors(form.email) %}
                <div class="form-error">{{ form_errors(form.email) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
            {% if form_errors(form.password) %}
                <div class="form-error">{{ form_errors(form.password) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.bio) }}
            {{ form_widget(form.bio) }}
            {% if form_errors(form.bio) %}
                <div class="form-error">{{ form_errors(form.bio) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.gender) }}
            {{ form_widget(form.gender) }}
            {% if form_errors(form.gender) %}
                <div class="form-error">{{ form_errors(form.gender) }}</div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_widget(form.Register, {'attr': {'class': 'd-none'}}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
